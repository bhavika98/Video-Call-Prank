<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.JetpackDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Ad_Attribution_Native_Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">AD</item>
        <item name="android:fontFamily">@font/varela</item>
        <item name="android:background">@drawable/ad_image</item>
        <item name="android:gravity">center</item>
        <item name="android:width">@dimen/_20sdp</item>
        <item name="android:height">@dimen/_15sdp</item>
    </style>

    <style name="Ad_Attribution_Native_Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">AD</item>
        <item name="android:fontFamily">@font/varela</item>
        <item name="android:background">@drawable/ad_image</item>
        <item name="android:gravity">center</item>
        <item name="android:width">@dimen/_20sdp</item>
        <item name="android:height">@dimen/_13sdp</item>
    </style>

</resources>